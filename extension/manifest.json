{
  "name": "Gorilla V2",
  "version": "1.0.0",
  "description": "",
  "manifest_version": 2,
  "permissions": ["activeTab", "tabs", "storage", "https://*/*"],
  "content_security_policy": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:",
  "icons": {
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["built/background/index.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "run_at": "document_start",
      "js": ["built/content/document-start.js"]
    },
    {
      "matches": ["https://*/*"],
      "run_at": "document_end",
      "js": ["built/content/document-end.js"]
    },
    {
      "matches": ["https://*/*"],
      "run_at": "document_idle",
      "js": ["built/content/document-idle.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "gorilla-v2@slammayjammay.com"
    }
  }
}
